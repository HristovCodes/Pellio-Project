@model Pellio.Models.OrdersList

@{
    ViewData["Title"] = "Cart";
}

<link rel="stylesheet" href="~/css/cart.css" />
<div>
    @{ Model.Total = 0;}
    @{ string messegformail = "Храните коуто поръчахте са: ";}
    <div class="grid">
        @foreach (var item in Model.Products)
        {
            messegformail = messegformail + item.ProductName + " (" + item.Price + "), ";
            <img class="image" src="@item.ImageUrl" alt="@item.ProductName" />
            <h2 class="name">
                @item.ProductName
            </h2>
            <form class="removeform">
                <input asp-controller="OrdersLists" asp-action="DeleteProduct" asp-route-id="@item.Id" type="submit" value="X" class="removebutton" />
            </form>
            <p class="price">
                @item.Price лв
                @{ Model.Total += item.Price;}
            </p>
        }
        <p class="total">
            Total:
            @Model.Total лв
        </p>
        <form class="orderform" asp-controller="OrdersLists" asp-action="OrderingMainLogicFunc">
            <p>Моля даите вашият адрес, телефон, име и E-Mail за да можем да изплъним вашате поръчка.</p>
            <label class="label" for="name">Име:</label>
            <input class="input" type="text" name="name" id="name" />
            <label class="label" for="address">Адрес:</label>
            <input class="input" type="text" name="address" id="address" />
            <label class="label" for="rec">E-Mail:</label>
            <input class="input" type="text" name="rec" id="rec" />
            <label class="label" for="phone">Телефонен номер:</label>
            <input class="input" type="tel" name="phone" id="phone" pattern="[0-9]{10}" />
            <input class="hide" type="text" name="mes" id="mes" value="@messegformail.TrimEnd(',')" />
            @*<input class="hide" type="text" name="bought" id="bought" value="@messegformail.Remove(0,28)" />*@
            <input class="input" type="submit" value="Поръчаи" />
        </form>
    </div>
</div>
